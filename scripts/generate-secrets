#!/usr/bin/env bash
# Removed set -e due to SIGPIPE issues with /dev/urandom

# Script to generate secure random passwords and update .envrc.secrets

# Find repository root
REPO_ROOT=$(git rev-parse --show-toplevel 2>/dev/null || echo ".")
cd "$REPO_ROOT"

# Check if .envrc.secrets exists
if [ ! -f ".envrc.secrets" ]; then
    echo "Error: .envrc.secrets file not found in repository root" >&2
    exit 1
fi

# Flag to show openssl warning only once
OPENSSL_WARNING_SHOWN=false

# Function to generate a secure password
# Uses alphanumeric + special chars but avoids problematic ones like $ ' " \ `
generate_password() {
    local length="${1:-32}"
    # Use /dev/urandom as a fallback if openssl is not available
    if command -v openssl &> /dev/null; then
        openssl rand -base64 48 | tr -d "=+/\n" | cut -c1-"$length"
    else
        if [ "$OPENSSL_WARNING_SHOWN" = "false" ]; then
            echo "Note: openssl not found, using /dev/urandom (alphanumeric only)" >&2
            OPENSSL_WARNING_SHOWN=true
        fi
        # Generate using /dev/urandom - alphanumeric only for safety
        # Use dd instead of head to avoid SIGPIPE
        tr -dc 'A-Za-z0-9' < /dev/urandom | dd bs=1 count="$length" 2>/dev/null
    fi
}

# Function to generate a client ID
generate_client_id() {
    local prefix="$1"
    local suffix=""
    if command -v openssl &> /dev/null; then
        suffix=$(openssl rand -hex 6)
    else
        # Generate 12 char hex-like string using /dev/urandom
        suffix=$(tr -dc 'a-f0-9' < /dev/urandom | dd bs=1 count=12 2>/dev/null)
    fi
    echo "${prefix}-${suffix}"
}

# Function to update a line in .envrc.secrets
update_secret() {
    local var_name="$1"
    local value="$2"
    
    # Use sed to update the line
    sed -i "s|^export ${var_name}=.*|export ${var_name}=\"${value}\"|" .envrc.secrets
    if [ $? -eq 0 ]; then
        echo "✓ Updated ${var_name}"
    else
        echo "✗ Failed to update ${var_name}" >&2
        return 1
    fi
}

echo "Generating secure secrets for .envrc.secrets..."
echo

# Generate passwords (32 chars)
KEYCLOAK_DB_PASSWORD=$(generate_password 32)
KEYCLOAK_ADMIN_PASSWORD=$(generate_password 32)
MATTERMOST_DB_PASSWORD=$(generate_password 32)
NEXTCLOUD_DB_PASSWORD=$(generate_password 32)
NEXTCLOUD_ADMIN_PASSWORD=$(generate_password 32)
MAILU_DB_PASSWORD=$(generate_password 32)
POSTAL_DB_PASSWORD=$(generate_password 32)
POSTAL_REDIS_PASSWORD=$(generate_password 32)
POSTAL_RABBITMQ_PASSWORD=$(generate_password 32)
POSTAL_SECRET_KEY=$(generate_password 32)
SENTRY_DB_PASSWORD=$(generate_password 32)
SENTRY_REDIS_PASSWORD=$(generate_password 32)
SENTRY_SECRET_KEY=$(generate_password 32)
GRAFANA_ADMIN_PASSWORD=$(generate_password 32)

# Generate OAuth secrets (48-64 chars)
MATTERMOST_OAUTH_SECRET=$(generate_password 48)
NEXTCLOUD_OIDC_SECRET=$(generate_password 48)
MAILU_OAUTH2_SECRET=$(generate_password 48)
MAILU_COOKIE_SECRET=$(generate_password 64)
POSTAL_OAUTH_SECRET=$(generate_password 48)
PROMETHEUS_OAUTH_SECRET=$(generate_password 48)
PROMETHEUS_COOKIE_SECRET=$(generate_password 64)
GRAFANA_OAUTH_SECRET=$(generate_password 48)
GRAFANA_COOKIE_SECRET=$(generate_password 64)
JAEGER_OAUTH_SECRET=$(generate_password 48)
JAEGER_COOKIE_SECRET=$(generate_password 64)
SENTRY_OAUTH_SECRET=$(generate_password 48)
SENTRY_COOKIE_SECRET=$(generate_password 64)

# Generate client IDs
MATTERMOST_CLIENT_ID=$(generate_client_id "mattermost-oauth")
NEXTCLOUD_CLIENT_ID=$(generate_client_id "nextcloud-oidc")
MAILU_CLIENT_ID=$(generate_client_id "mailu-oauth2")
POSTAL_CLIENT_ID=$(generate_client_id "postal-oauth")
PROMETHEUS_CLIENT_ID=$(generate_client_id "prometheus")
GRAFANA_CLIENT_ID=$(generate_client_id "grafana")
JAEGER_CLIENT_ID=$(generate_client_id "jaeger")
SENTRY_CLIENT_ID=$(generate_client_id "sentry")

# Update the secrets file
update_secret "KEYCLOAK_DB_PASSWORD" "$KEYCLOAK_DB_PASSWORD"
update_secret "KEYCLOAK_ADMIN_PASSWORD" "$KEYCLOAK_ADMIN_PASSWORD"
update_secret "MATTERMOST_DB_PASSWORD" "$MATTERMOST_DB_PASSWORD"
update_secret "MATTERMOST_OAUTH_CLIENT_ID" "$MATTERMOST_CLIENT_ID"
update_secret "MATTERMOST_OAUTH_CLIENT_SECRET" "$MATTERMOST_OAUTH_SECRET"
update_secret "NEXTCLOUD_DB_PASSWORD" "$NEXTCLOUD_DB_PASSWORD"
update_secret "NEXTCLOUD_ADMIN_PASSWORD" "$NEXTCLOUD_ADMIN_PASSWORD"
update_secret "NEXTCLOUD_OIDC_CLIENT_ID" "$NEXTCLOUD_CLIENT_ID"
update_secret "NEXTCLOUD_OIDC_CLIENT_SECRET" "$NEXTCLOUD_OIDC_SECRET"
update_secret "MAILU_DB_PASSWORD" "$MAILU_DB_PASSWORD"
update_secret "MAILU_OAUTH2_CLIENT_ID" "$MAILU_CLIENT_ID"
update_secret "MAILU_OAUTH2_CLIENT_SECRET" "$MAILU_OAUTH2_SECRET"
update_secret "MAILU_OAUTH2_COOKIE_SECRET" "$MAILU_COOKIE_SECRET"
update_secret "POSTAL_DB_PASSWORD" "$POSTAL_DB_PASSWORD"
update_secret "POSTAL_REDIS_PASSWORD" "$POSTAL_REDIS_PASSWORD"
update_secret "POSTAL_RABBITMQ_PASSWORD" "$POSTAL_RABBITMQ_PASSWORD"
update_secret "POSTAL_SECRET_KEY" "$POSTAL_SECRET_KEY"
update_secret "POSTAL_OAUTH_CLIENT_ID" "$POSTAL_CLIENT_ID"
update_secret "POSTAL_OAUTH_CLIENT_SECRET" "$POSTAL_OAUTH_SECRET"

# Update monitoring secrets
update_secret "SENTRY_DB_PASSWORD" "$SENTRY_DB_PASSWORD"
update_secret "SENTRY_REDIS_PASSWORD" "$SENTRY_REDIS_PASSWORD"
update_secret "SENTRY_SECRET_KEY" "$SENTRY_SECRET_KEY"
update_secret "GRAFANA_ADMIN_PASSWORD" "$GRAFANA_ADMIN_PASSWORD"
update_secret "PROMETHEUS_OAUTH_CLIENT_ID" "$PROMETHEUS_CLIENT_ID"
update_secret "PROMETHEUS_OAUTH_CLIENT_SECRET" "$PROMETHEUS_OAUTH_SECRET"
update_secret "PROMETHEUS_OAUTH_COOKIE_SECRET" "$PROMETHEUS_COOKIE_SECRET"
update_secret "GRAFANA_OAUTH_CLIENT_ID" "$GRAFANA_CLIENT_ID"
update_secret "GRAFANA_OAUTH_CLIENT_SECRET" "$GRAFANA_OAUTH_SECRET"
update_secret "GRAFANA_OAUTH_COOKIE_SECRET" "$GRAFANA_COOKIE_SECRET"
update_secret "JAEGER_OAUTH_CLIENT_ID" "$JAEGER_CLIENT_ID"
update_secret "JAEGER_OAUTH_CLIENT_SECRET" "$JAEGER_OAUTH_SECRET"
update_secret "JAEGER_OAUTH_COOKIE_SECRET" "$JAEGER_COOKIE_SECRET"
update_secret "SENTRY_OAUTH_CLIENT_ID" "$SENTRY_CLIENT_ID"
update_secret "SENTRY_OAUTH_CLIENT_SECRET" "$SENTRY_OAUTH_SECRET"
update_secret "SENTRY_OAUTH_COOKIE_SECRET" "$SENTRY_COOKIE_SECRET"

# Set AWS SES default region (other SES values require manual configuration)
update_secret "AWS_SES_REGION" "us-east-1"

echo
echo "✓ All secrets have been generated and updated"
echo
echo "Note: The following secrets were NOT updated (require manual configuration):"
echo "  - GITHUB_TOKEN (create at github.com/settings/tokens)"
echo "  - SOPS_AGE_PRIVATE_KEY (already set)"
echo "  - DIGITALOCEAN_TOKEN (create in DO control panel)"
echo "  - SPACES_ACCESS_KEY_ID (create in DO Spaces)"
echo "  - SPACES_SECRET_ACCESS_KEY (create in DO Spaces)"
echo "  - NEXTCLOUD_SPACES_* (create separate DO Spaces keys for Nextcloud)"
echo "  - AWS_SES_* (create IAM user with SES permissions)"
echo "  - SES_SMTP_* (derived from AWS SES credentials)"
echo
echo "Run 'direnv allow' to reload the environment"