# DigitalOcean API Token (required)
# Get your token from: https://cloud.digitalocean.com/account/api/tokens
# do_token = "your-digitalocean-api-token"

# Cluster configuration
cluster_name       = "k8s-cluster"
region            = "nyc3"
kubernetes_version = "1.29.1-do.0"  # Check for latest at: doctl kubernetes options versions

# Node pool configuration
node_pool_name = "cloud1"
node_size      = "s-1vcpu-2gb"  # Basic AMD $28/month
node_count     = 2               # Initial number of nodes
min_nodes      = 2               # Minimum nodes for autoscaling
max_nodes      = 3               # Maximum nodes for autoscaling
auto_scale     = true            # Enable autoscaling

# Tags for resource organization
tags = [
  "kubernetes",
  "managed",
  "terraform",
  "production"
]

# Project name for additional tagging
project_name = "blueprint"

# Conservative autoscaling notes:
# The cluster autoscaler in DigitalOcean Kubernetes will:
# - Scale up when pods cannot be scheduled due to insufficient resources
# - Scale down when nodes have been underutilized for 10+ minutes
# - Respect the min_nodes and max_nodes limits
# - The Basic AMD nodes (s-1vcpu-2gb) provide good value at $28/month each