# DigitalOcean API Token (required)
# Get yours at: https://cloud.digitalocean.com/account/api/tokens
DIGITALOCEAN_TOKEN=dop_v1_your_token_here

# AWS Credentials (required if email features enabled)
# For SES email functionality
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_DEFAULT_REGION=us-east-1

# Optional: Debug mode
DEBUG=false

# Optional: Custom platform path (default: ../platform)
PLATFORM_PATH=../platform