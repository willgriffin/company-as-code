{
  "name": "@startup-gitops/platform",
  "version": "1.0.0",
  "description": "CDKTF infrastructure definitions",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "compile": "tsc",
    "typecheck": "tsc --noEmit",
    "get": "cdktf get",
    "synth": "cdktf synth",
    "plan": "node scripts/get-stacks.js validate && cdktf plan $(node scripts/get-stacks.js list)",
    "deploy": "node scripts/get-stacks.js validate && cdktf deploy $(node scripts/get-stacks.js list) --auto-approve",
    "destroy": "node scripts/get-stacks.js validate && cdktf destroy $(node scripts/get-stacks.js list) --auto-approve",
    "plan:stack": "node scripts/get-stacks.js validate && cdktf plan",
    "deploy:stack": "node scripts/get-stacks.js validate && cdktf deploy --auto-approve",
    "destroy:stack": "node scripts/get-stacks.js validate && cdktf destroy --auto-approve",
    "output": "cdktf output",
    "stacks": "node scripts/get-stacks.js list",
    "validate": "node scripts/get-stacks.js validate",
    "kubeconfig": "node scripts/extract-kubeconfig.js",
    "test": "vitest run",
    "test:run": "vitest run",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src",
    "format:check": "prettier --check src",
    "dev": "tsc --watch",
    "state:validate": "node scripts/validate-state.js",
    "state:list": "node scripts/list-state.js",
    "state:backup": "node scripts/backup-state.js",
    "state:import": "node scripts/import-resources.js"
  },
  "dependencies": {
    "@cdktf/provider-aws": "^20.0.0",
    "@cdktf/provider-digitalocean": "^13.0.0",
    "@cdktf/provider-github": "^15.0.0",
    "@cdktf/provider-kubernetes": "^12.0.0",
    "@cdktf/provider-null": "^11.0.0",
    "@types/js-yaml": "^4.0.9",
    "cdktf": "^0.21.0",
    "cdktf-cli": "^0.21.0",
    "constructs": "^10.0.0",
    "glob": "^10.0.0",
    "js-yaml": "^4.1.0",
    "zod": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  }
}
